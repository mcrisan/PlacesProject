{# src/Bundle/ProjectBundle/Resources/Views/Reviews/index.html.twig #}

{% if comments|length > 3 %}
    <div class="reviews-div" style="padding-right: 3px;height: 350px; overflow: scroll; overflow-x: hidden; border-bottom: 0px;">
{% endif %}
            
    {% for key,comment in comments %}
        <div class="comment{{ cycle(['odd', 'even'], loop.index0) }}" style="border:0px solid black; padding:10px;margin-bottom: 0px">
            <h1><b>{{ comment.user|capitalize }}</b> <span>- on {{ comment.created|date('l, F j, Y @ H:i') }}</span></h1>
            <br />
            <p>{{ comment.comment }}</p>
        </div>
    {% else %}
        <p>No reviews for this place !</p>
    {% endfor %}
    
{% if comments|length > 3 %}
    </div>
{% endif %} 
